<div class="dashboard-container">
    <div class="dashboard-inner">
        <div class="dashboard-section dashboard-section-cards">
            <div class="dashboard-section-header">
                <span class="dashboard-section-header--title">
                    Integrations
                </span>
            </div>
            <div class="dashboard-cardSet">
                {{#each integrations}}
                    <div class="dashboard-card card element-card client-card client-card--reduced" data-name="{{this.uniqueName}}">
                        <div class="card-header">{{this.readableName}}</div>
                        <div class="card-body">
                            <div class="card-property-container">
                                <div class="card-property">
                                    <span class="card-property--label">type</span>
                                    <span class="card-property--value">{{this.integration.type}}</span>
                                </div>
                                <div class="card-property">
                                    <span class="card-property--label">state</span>
                                    <span class="card-property--value">{{#if this.status}}active{{else}}inactive{{/if}}</span>
                                </div>
                                <div class="card-property">
                                    <span class="card-property--label">Entities</span>
                                    <span class="card-property--value">{{getLength this.lightObjects}} Lights, {{getLength this.groupObjects}} Groups, {{getLength this.sceneObjects}} Scenes</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>